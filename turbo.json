{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "PORT"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
    },
    "lint:fix": {
    },
    "check": {
      "dependsOn": [
        "@repo/dto#build"
      ]
    },
    "test": {
      "dependsOn": [
        "@repo/dto#build"
      ],
      "cache": false
    },
    "test:cov": {
      "dependsOn": [
        "@repo/dto#build"
      ],
      "outputs": [
        "coverage/**"
      ],
      "cache": false
    }
  }
}
